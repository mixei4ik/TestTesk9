<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    
    <ImageButton
        android:id="@+id/back_button"
        android:layout_width="14dp"
        android:layout_height="14dp"
        android:src="@drawable/ic_arrow_back"
        android:layout_marginStart="20dp"
        android:layout_marginTop="63dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/profile_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/profile"
        android:textSize="15sp"
        android:fontFamily="@font/montserrat_bold"
        android:letterSpacing="-0.03"
        android:textColor="@color/black"
        android:layout_marginTop="63dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <ImageView
        android:id="@+id/avatar_profile_image"
        android:layout_width="61dp"
        android:layout_height="61dp"
        tools:srcCompat="@tools:sample/avatars"
        android:layout_marginTop="19dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/back_button"/>

    <TextView
        android:id="@+id/change_photo_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dp"
        android:clickable="true"
        android:focusable="true"
        android:fontFamily="@font/montserrat_medium"
        android:letterSpacing="-0.03"
        android:text="@string/change_photo"
        android:textColor="@color/gray_600"
        android:textSize="8sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/avatar_profile_image"
        tools:ignore="SmallSp" />

    <TextView
        android:id="@+id/name_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/satria_adhi_pradana"
        android:fontFamily="@font/montserrat_bold"
        android:textSize="15sp"
        android:letterSpacing="-0.03"
        android:textColor="@color/black_700"
        android:layout_marginTop="17dp"
        app:layout_constraintTop_toBottomOf="@id/change_photo_button"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <Button
        android:id="@+id/upload_button"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:layout_marginStart="43dp"
        android:layout_marginTop="36dp"
        android:layout_marginEnd="42dp"
        android:backgroundTint="@color/purple_600"
        android:drawableStart="@drawable/ic_load"
        android:drawablePadding="50dp"
        android:fontFamily="@font/montserrat_semibold"
        android:letterSpacing="-0.03"
        android:text="@string/upload_item"
        android:textAllCaps="false"
        android:textColor="@color/white_500"
        android:textSize="14sp"
        app:cornerRadius="15dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/name_text" />

    <ImageButton
        android:id="@+id/trade_store_icon_button"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:background="@drawable/roundedbutton40"
        android:src="@drawable/ic_credit_card"
        android:layout_marginStart="32dp"
        android:layout_marginTop="14dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/upload_button"/>

    <TextView
        android:id="@+id/trade_store_text"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:fontFamily="@font/montserrat"
        android:letterSpacing="-0.03"
        android:text="@string/trade_store"
        android:textColor="@color/black_900"
        android:textSize="14sp"
        android:clickable="true"
        android:layout_marginStart="6dp"
        app:layout_constraintEnd_toStartOf="@id/trade_store_next_icon"
        app:layout_constraintBottom_toBottomOf="@id/trade_store_icon_button"
        app:layout_constraintStart_toEndOf="@id/trade_store_icon_button"
        app:layout_constraintTop_toTopOf="@id/trade_store_icon_button"
        android:focusable="true" />

    <ImageView
        android:id="@+id/trade_store_next_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_next"
        android:layout_marginEnd="45dp"
        app:layout_constraintBottom_toBottomOf="@id/trade_store_icon_button"
        app:layout_constraintTop_toTopOf="@id/trade_store_icon_button"
        app:layout_constraintEnd_toEndOf="parent"/>

    <ImageButton
        android:id="@+id/payment_method_icon_button"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:background="@drawable/roundedbutton40"
        android:src="@drawable/ic_credit_card"
        android:layout_marginStart="32dp"
        android:layout_marginTop="25dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/trade_store_icon_button"/>

    <TextView
        android:id="@+id/payment_method_text"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:fontFamily="@font/montserrat"
        android:letterSpacing="-0.03"
        android:text="@string/payment_method"
        android:textColor="@color/black_900"
        android:textSize="14sp"
        android:clickable="true"
        android:layout_marginStart="6dp"
        app:layout_constraintEnd_toStartOf="@id/payment_method_next_icon"
        app:layout_constraintBottom_toBottomOf="@id/payment_method_icon_button"
        app:layout_constraintStart_toEndOf="@id/payment_method_icon_button"
        app:layout_constraintTop_toTopOf="@id/payment_method_icon_button"
        android:focusable="true" />

    <ImageView
        android:id="@+id/payment_method_next_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_next"
        android:layout_marginEnd="45dp"
        app:layout_constraintBottom_toBottomOf="@id/payment_method_icon_button"
        app:layout_constraintTop_toTopOf="@id/payment_method_icon_button"
        app:layout_constraintEnd_toEndOf="parent"/>

    <ImageButton
        android:id="@+id/balance_icon_button"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:background="@drawable/roundedbutton40"
        android:src="@drawable/ic_credit_card"
        android:layout_marginStart="32dp"
        android:layout_marginTop="25dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/payment_method_icon_button"/>

    <TextView
        android:id="@+id/balance_text"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:fontFamily="@font/montserrat"
        android:letterSpacing="-0.03"
        android:text="@string/balance"
        android:textColor="@color/black_900"
        android:textSize="14sp"
        android:clickable="true"
        android:layout_marginStart="6dp"
        app:layout_constraintEnd_toStartOf="@id/balance_value_text"
        app:layout_constraintBottom_toBottomOf="@id/balance_icon_button"
        app:layout_constraintStart_toEndOf="@id/balance_icon_button"
        app:layout_constraintTop_toTopOf="@id/balance_icon_button"
        android:focusable="true" />

    <TextView
        android:id="@+id/balance_value_text"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:fontFamily="@font/montserrat"
        android:letterSpacing="-0.03"
        android:text="@string/_1593"
        android:textColor="@color/black_900"
        android:textSize="14sp"
        android:clickable="true"
        android:layout_marginEnd="31dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="@id/balance_icon_button"
        app:layout_constraintTop_toTopOf="@id/balance_icon_button"
        android:focusable="true" />

    <ImageButton
        android:id="@+id/trade_history_icon_button"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:background="@drawable/roundedbutton40"
        android:src="@drawable/ic_credit_card"
        android:layout_marginStart="28dp"
        android:layout_marginTop="25dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/balance_icon_button"/>

    <TextView
        android:id="@+id/trade_history_text"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:fontFamily="@font/montserrat"
        android:letterSpacing="-0.03"
        android:text="@string/trade_history"
        android:textColor="@color/black_900"
        android:textSize="14sp"
        android:clickable="true"
        android:layout_marginStart="6dp"
        app:layout_constraintEnd_toStartOf="@id/trade_history_next_icon"
        app:layout_constraintBottom_toBottomOf="@id/trade_history_icon_button"
        app:layout_constraintStart_toEndOf="@id/trade_history_icon_button"
        app:layout_constraintTop_toTopOf="@id/trade_history_icon_button"
        android:focusable="true" />

    <ImageView
        android:id="@+id/trade_history_next_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_next"
        android:layout_marginEnd="45dp"
        app:layout_constraintBottom_toBottomOf="@id/trade_history_icon_button"
        app:layout_constraintTop_toTopOf="@id/trade_history_icon_button"
        app:layout_constraintEnd_toEndOf="parent"/>

    <ImageButton
        android:id="@+id/restore_purchase_icon_button"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:background="@drawable/roundedbutton40"
        android:src="@drawable/ic_restore"
        android:layout_marginStart="28dp"
        android:layout_marginTop="25dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/trade_history_icon_button"/>

    <TextView
        android:id="@+id/restore_purchase_text"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:fontFamily="@font/montserrat"
        android:letterSpacing="-0.03"
        android:text="@string/restore_purchase"
        android:textColor="@color/black_900"
        android:textSize="14sp"
        android:clickable="true"
        android:layout_marginStart="6dp"
        app:layout_constraintEnd_toStartOf="@id/restore_purchase_next_icon"
        app:layout_constraintBottom_toBottomOf="@id/restore_purchase_icon_button"
        app:layout_constraintStart_toEndOf="@id/restore_purchase_icon_button"
        app:layout_constraintTop_toTopOf="@id/restore_purchase_icon_button"
        android:focusable="true" />

    <ImageView
        android:id="@+id/restore_purchase_next_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_next"
        android:layout_marginEnd="45dp"
        app:layout_constraintBottom_toBottomOf="@id/restore_purchase_icon_button"
        app:layout_constraintTop_toTopOf="@id/restore_purchase_icon_button"
        app:layout_constraintEnd_toEndOf="parent"/>

    <ImageButton
        android:id="@+id/help_icon_button"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:background="@drawable/roundedbutton40"
        android:src="@drawable/ic_help"
        android:layout_marginStart="28dp"
        android:layout_marginTop="25dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/restore_purchase_icon_button"/>

    <TextView
        android:id="@+id/help_text"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:fontFamily="@font/montserrat"
        android:letterSpacing="-0.03"
        android:text="@string/help"
        android:textColor="@color/black_900"
        android:textSize="14sp"
        android:clickable="true"
        android:layout_marginStart="6dp"
        android:layout_marginEnd="45dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="@id/help_icon_button"
        app:layout_constraintStart_toEndOf="@id/help_icon_button"
        app:layout_constraintTop_toTopOf="@id/help_icon_button"
        android:focusable="true" />

    <ImageButton
        android:id="@+id/log_out_icon_button"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:background="@drawable/roundedbutton40"
        android:src="@drawable/ic_log_in"
        android:layout_marginStart="28dp"
        android:layout_marginTop="25dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/help_icon_button"/>

    <TextView
        android:id="@+id/log_out_text"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:fontFamily="@font/montserrat"
        android:letterSpacing="-0.03"
        android:text="@string/log_out"
        android:textColor="@color/black_900"
        android:textSize="14sp"
        android:clickable="true"
        android:layout_marginStart="6dp"
        android:layout_marginEnd="45dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="@id/log_out_icon_button"
        app:layout_constraintStart_toEndOf="@id/log_out_icon_button"
        app:layout_constraintTop_toTopOf="@id/log_out_icon_button"
        android:focusable="true" />



</androidx.constraintlayout.widget.ConstraintLayout>